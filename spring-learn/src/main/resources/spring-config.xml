<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!--配置文件配置-->
	<bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
		<property name="locations">
			<array>
				<value>classpath:application.properties</value>
			</array>
		</property>
	</bean>
	<!--自定义BeanFactoryProcessor-->
	<bean class="beanFactoryProcessor.LogoBeanFactoryPostProcessor"/>
	<!--自定义bean-->
	<!--自定义bean-->
	<bean id="logoP" name="logoName,;logAliasOne,;logAliasTwo" class="com.linran.bean.Logo" init-method="initMethod">
		<description>jian dande miao shu</description>
<!--		<constructor-arg index="0" value="logP index"/>-->
		<constructor-arg index="0">
			<list>
				<value>1</value>
				<value>2</value>
				<value>3</value>
			</list>
		</constructor-arg>
<!--		<lookup-method/>-->
<!--		<replaced-method/>-->
		<property name="name" value="${logo.name}"/>
		<meta key="metaK1" value="metaV1"/>
	</bean>
	<!--循环依赖-->
	<bean id="a" class="com.linran.bean.CircleA">
		<property name="b" ref="b"/>
	</bean>

	<bean id="b" class="com.linran.bean.CircleB">
		<property name="a" ref="a"/>
	</bean>

	<bean id="myFactoryBeanObject" class="com.linran.bean.MyFactoryBeanObject"/>

</beans>